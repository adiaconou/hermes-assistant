{
  "name": "personal-assistant",
  "version": "0.1.0",
  "description": "SMS-based personal assistant with LLM and Google integrations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently -n server,tunnel -c blue,green \"npm run dev:server\" \"npm run dev:tunnel\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:tunnel": "$HOME/.local/bin/ngrok http 3000",
    "lint": "eslint src/",
    "test": "vitest"
  },
  "keywords": [
    "assistant",
    "sms",
    "llm",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "twilio": "^5.11.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
