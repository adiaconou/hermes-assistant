{
  "name": "personal-assistant",
  "version": "0.1.0",
  "description": "SMS-based personal assistant with LLM and Google integrations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm rebuild better-sqlite3 && tsc && npm run build:copy-views",
    "build:copy-views": "node -e \"const fs=require('fs');fs.mkdirSync('dist/admin/views',{recursive:true});fs.cpSync('src/admin/views','dist/admin/views',{recursive:true});\"",
    "start": "node dist/index.js",
    "dev": "concurrently -n server,tunnel -c blue,green \"npm run dev:server\" \"npm run dev:tunnel\"",
    "dev:server": "tsx watch --ignore dist --ignore logs --ignore data --ignore '**/*.log' --ignore '.npm-cache' src/index.ts",
    "dev:tunnel": "$HOME/.local/bin/ngrok http 3000",
    "lint": "eslint src/",
    "test": "npx vitest",
    "test:run": "npx vitest run",
    "test:integration": "npx vitest run tests/integration/",
    "test:unit": "npx vitest run tests/unit/",
    "sms": "npx tsx scripts/send-sms.ts"
  },
  "keywords": [
    "assistant",
    "sms",
    "llm",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.20.1",
    "supertest": "^7.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/luxon": "^3.4.2",
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "croner": "^9.1.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "googleapis": "^170.1.0",
    "https-proxy-agent": "^5.0.1",
    "luxon": "^3.5.0",
    "personal-assistant": "file:",
    "twilio": "^5.11.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
