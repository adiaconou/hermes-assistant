# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Your phone number (for receiving responses)
USER_PHONE_NUMBER=+1234567890

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Credential Storage
# Provider: 'sqlite' (default) or 'memory' (tests only)
CREDENTIAL_STORE_PROVIDER=sqlite
# SQLite path: ./data/credentials.db (dev) or /app/data/credentials.db (Railway)
CREDENTIAL_STORE_SQLITE_PATH=./data/credentials.db
# Encryption key for tokens at rest (generate with: openssl rand -hex 32)
CREDENTIAL_ENCRYPTION_KEY=your_32_byte_hex_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Memory Processor
MEMORY_MODEL_ID=claude-opus-4-5-20251101
MEMORY_LOG_VERBOSE=false

# Media-first planning
MEDIA_FIRST_PLANNING_ENABLED=true
MEDIA_PRE_ANALYSIS_TIMEOUT_MS=5000

# Filesystem skills
SKILLS_ENABLED=true
# Optional overrides (defaults shown)
# SKILLS_BUNDLED_DIR=./skills
# SKILLS_IMPORTED_DIR=./data/skills/imported
# SKILLS_CONFIDENCE_THRESHOLD=0.6

# Auth Link Base URL (for SMS auth flow)
AUTH_BASE_URL=http://localhost:3000
