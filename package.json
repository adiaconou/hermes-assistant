{
  "name": "personal-assistant",
  "version": "0.1.0",
  "description": "SMS-based personal assistant with LLM and Google integrations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm rebuild better-sqlite3 && tsc",
    "start": "node dist/index.js",
    "dev": "concurrently -n server,tunnel -c blue,green \"npm run dev:server\" \"npm run dev:tunnel\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:tunnel": "$HOME/.local/bin/ngrok http 3000",
    "lint": "eslint src/",
    "test": "npx vitest",
    "test:run": "npx vitest run",
    "test:integration": "npx vitest run tests/integration/",
    "test:unit": "npx vitest run tests/unit/",
    "sms": "npx tsx scripts/send-sms.ts"
  },
  "keywords": [
    "assistant",
    "sms",
    "llm",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "concurrently": "^9.2.1",
    "supertest": "^7.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@rollup/rollup-win32-x64-msvc": "^4.56.0",
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "croner": "^9.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "googleapis": "^170.1.0",
    "twilio": "^5.11.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
